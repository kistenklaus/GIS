{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false,
    "features" : ["default"]
  },
  "package": {
    "productName": "control_panel",
    "version": "0.0.0"
  },
  "tauri": {
    "cli": {
      "description": "muzero SeasonIV Control Panel",
      "args": [
        {
          "name": "address",
          "short": "t",
          "takesValue": true
        }
      ]
    },
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "fs": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.hyperloop.mu-zero",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [
        "test.yaml",
        "splashscreen.jpg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Control Panel",
        "width": 800,
        "height": 600,
        "visible": false
      },
      {
        "width": 700,
        "height": 400,
        "decorations": false,
        "center": true,
        "url": "splashscreen.html",
        "label": "splashscreen",
        "title": "FLOATING",
        "visible": false
      }
    ]
  }
}
